{
  "name": "@shopware-ag/meteor-tokens",
  "version": "0.0.0",
  "description": "Design Tokens for the Meteor Design System used at shopware",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "tsx ./src/scripts/index.ts",
    "test:unit": "vitest --run",
    "test:unit:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "npm run lint:eslint && npm run lint:types",
    "lint:eslint": "eslint .",
    "lint:types": "tsc --noEmit"
  },
  "exports": {
    "./primitives.css": "./dist/foundation/primitives.css",
    "./administration/light.css": "./dist/administration/light.css",
    "./administration/dark.css": "./dist/administration/dark.css"
  },
  "files": [
    "dist",
    "tokens"
  ],
  "author": "Nils Haberkamp",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.8",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vitest": "^0.3.20",
    "msw": "^2.1.5",
    "prettier": "^3.2.4",
    "style-dictionary": "^3.9.2",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "ora": "^8.0.1",
    "vitest": "^1.2.1",
    "zod": "^3.22.4"
  }
}
